<h1>Beer places search</h1>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
  <table>
    <thead>
      <% Place.rendered_fields.each do |f| %>
        <td><%= f %></td>
      <% end %>
    </thead>
    <% @places.each do |place| %>
      <tr>
      	<% Place.rendered_fields.each do |key| %>
          <% if key == :name %>
          	<td><%= link_to place.send(key), places_path + "/" + place.id %></td>
          <% else %>
          	<td><%= place.send(key) %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>